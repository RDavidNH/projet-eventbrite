<br>
<div class="container">
    <div class="row">
        <div class="col-sm-7">
            <h1>Participants</h1>

            <table class="table">
                <% @attendances.each do |attendance| %>
                    <tr>
                        <td><a href="<%= user_path(attendance.user.id) %>"><%= attendance.user.first_name %> <%= attendance.user.last_name %></a></td>
                    </tr>
                <% end %>
            </table>
        </div>

        <div class="col-sm-5">
          <h3><%= @event.title %></h3>
          <h4 class="text-capitalize">
              par <a href="<%= user_path(@event.user.id) %>"><%= @event.user.first_name %> <%= @event.user.last_name %></a>
          </h4>
          <table class="table">
            <tr>
              <th>Début</th>
              <td><%= @event.start_date %></td>
            </tr>
            <tr>
              <th>Durée</th>
              <td><%= @event.duration %></td>
            </tr>
            <tr>
              <th>Description</th>
              <td><%= @event.description %></td>
            </tr>
            <tr>
              <th>Prix</th>
              <td>$<%= @event.price %></td>
            </tr>
            <tr>
              <th>Lieu</th>
              <td><%= @event.location %></td>
            </tr>
          </table>

        </div>
    </div>
</div>
